@model DataAcessLayer.Event

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create";
}
<div class="card">
    <div class="card-header">Add Event</div>
    <div class="card-body">
        @using (Html.BeginForm("Create", "EventList", FormMethod.Post, new { id = "form" }))
        {
            <div class="row">
                <div class="col-sm-4">
                    <div class="form-group">
                        <label class="control-label">EventType</label>
                        @Html.TextBoxFor(m => m.EventTypes, new { @class = "form-control", placeholder = "Enter Event Type", @Autocomplete = "off" })
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.ValidationMessageFor(m => m.EventTypes, "", new { @class = "text-danger" })
                </div>
                <div class="col-sm-4">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Images, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input type="file" name="ImageFile" required />
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    @Html.ValidationMessageFor(m => m.Images, "", new { @class = "text-danger" })
                </div>
                <div class="card-footer ">
                    <div class="fa-pull-right ">
                        <button type="submit" class="btn btn-primary" value="Create">Save</button>
                        <a href='@Url.Action("Index","EventList")' class="btn btn-danger">Close</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}



