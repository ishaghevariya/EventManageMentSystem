@model DataAcessLayer.ViewModel.FeedbackViewModel
@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var data = ViewBag.type;
}

<head>
    <title>Feedback</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="keywords" content="Events Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template,
        SmartPhone Compatible web template, free WebDesigns for Nokia, Samsung, LG, Sony Ericsson, Motorola web design" />*@
    <script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
    <!-- Custom Theme files -->
    <link href="~/plugins/css/bootstrap.css" type="text/css" rel="stylesheet" media="all">
    <link href="~/plugins/css/style.css" type="text/css" rel="stylesheet" media="all">
    <link href="~/plugins/css/font-awesome.css" rel="stylesheet">		<!-- font-awesome icons -->
    <link href="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-star-rating@4.0.7/css/star-rating.css" media="all" rel="stylesheet" type="text/css" />
    <!-- //Custom Theme files -->
    <!-- js -->
    <script src="~/plugins/js/jquery-2.2.3.min.js"></script>
    <script src="~/plugins/js/bootstrap.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/gh/kartik-v/bootstrap-star-rating@4.0.7/js/star-rating.js" type="text/javascript"></script>
    @*<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>*@
    <!-- //js -->
    <!-- web-fonts -->
    <link href="//fonts.googleapis.com/css?family=Josefin+Sans:300,400,600,700" rel="stylesheet">
    <link href="//fonts.googleapis.com/css?family=Roboto" rel="stylesheet">

</head>
<body>
    <section class="about_agile">
        <div class="container">
            <h3 class="heading-agileinfo white-w3ls">Event Booking<span class="black-w3ls">Events is a professionally managed Event</span></h3>
            <div class="about-grids">
                <div class="abt-rt-grid">
                    <div class="w3ls-grid-head text-center">
                        <h3>FeedBack </h3>
                    </div>
                    <div class="abt-form">
                        <form asp-action="AddFeedback" asp-controller="Booking" method="post">
                            <input type="hidden" asp-for="Id"/>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="col-sm-12 col-xs-12 w3ls-lt-form">
                                <div class="w3ls-pr">
                                    <label asp-for="Email">Email</label>
                                    <input asp-for="Email" type="email" name="Email" value="" style="font-weight: 700; font-size: 14px; color: black" required placeholder="Email">
                                    <span asp-validation-for="Email"></span>
                                </div>
                            </div>
                            <div class="col-sm-12 col-xs-12 w3ls-lt-form">
                                <div class="w3ls-pr">
                                    <label>Events</label>
                                    <select class="sel" name="TypeName" style="font-weight: 700; font-size: 14px; color: black">
                                        <option value="">--Select Event Type--</option>
                                        @foreach (var item in data)
                                        {
                                            <option value="@item.Id" style="font-weight: 700; font-size: 14px; color: black"> @item.EventTypes</option>
                                        }
                                    </select>
                                </div>
                            </div><br />
                            <div class="col-sm-12 col-xs-12">
                                <div class="w3ls-pr">
                                    <label asp-for="Rating">Rating</label>
                                    <input asp-for="Rating" type="number" style="color:yellow;" id="input-id" />
                                </div>
                            </div>
                            <div class="clearfix"></div>
                            <div class="text-center">
                                <input type="submit" value="Save">
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script>
        $("#input-id").rating();
    </script>
    @if (ViewBag.message != null)
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js">
        </script>
        <script type="text/javascript">
            $(document).ready(function () {
                bootbox.alert("@ViewBag.message");
            });
        </script>
    }
</body>
