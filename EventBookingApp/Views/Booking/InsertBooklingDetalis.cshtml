@model DataAcessLayer.BookingDetalis

@{
    var flower = ViewBag.Flowertype;
    var equipment = ViewBag.Equipmenttype;
    var food = ViewBag.Foodtype;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
</head>
<body>
    <br />
    <section>
        <div class="container">
            <div class="about-grids">
                <div class="abt-rt-grid">
                    <div class="w3ls-grid-head text-center">
                        <h3>Booking Decoration </h3>
                    </div>
                    <div class="card">
                        <div class="card-body">
                            <form asp-action="InsertBooklingDetalis" asp-controller="Booking" method="post">
                                <input type="hidden" asp-for="BookingId" />
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="control-label">Equipment</label>
                                            <select asp-for="EquipmentId" class="form-control" name="Equipment">
                                                <option value="">--Select Equipment--</option>
                                                @foreach (var item in equipment)
                                                {
                                                    <option value="@item.EquipmentId"> @item.EquipmentType</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="control-label">Flower</label>
                                            <select asp-for="FlowerId" class="form-control" name="Flower">
                                                <option value="">--Select Flower--</option>
                                                @foreach (var item in flower)
                                                {
                                                    <option value="@item.FlowerId"> @item.FlowerType</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <label class="control-label">Food</label>
                                            <select asp-for="FoodId" class="form-control" name="Food">
                                                <option value="">--Select Food--</option>
                                                @foreach (var item in food)
                                                {
                                                    <option value="@item.FoodId"> @item.FoodType</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <div class="card-footer ">
                                        <div class="text-center">
                                            <input type="submit" class="btn" style="background-color:deeppink" value="Save">
                                            <a href='@Url.Action("Index","Booking")' class="btn btn-danger">Close</a>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script src="~/plugins/js/jquery-2.2.3.min.js"></script>
    <script src="~/plugins/js/bootstrap.js"></script>
</body>
</html>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
