    <div class="events-agileits-w3layouts">
        <div class="container">

            <h2 class="heading-agileinfo">Events<span>Events is a professionally managed Event</span></h2>
            <div class="popular-grids">
                @foreach (var item in data)
                {
                    <div class="col-md-4 popular-grid">
                        @foreach (var i in images)
                        {
                            @if (item.Id == i.EventId)
                            {
                                <img src="~/EventImages/@i.ImageName" class="img-responsive" alt="" />
                            }
                        }
                        <div class="popular-text">
                            <h5 class="text-black"><button data-toggle="modal" class="btn btn-block btn-secondary" style="color:deeppink;background-color:burlywood" data-target="#myModal" onclick="getId(@item.Id)">@item.EventTypes</button></h5>
                            <div class="detail-bottom">
                                @if (item.EventTypes == "Birthday")
                                {
                                    <ul>
                                        <li><i class="fa fa-calendar" aria-hidden="true"></i>30 May</li>
                                        <li><i class="fa fa-map-marker" aria-hidden="true"></i>LONDON, UK</li>
                                    </ul>
                                    <p>We Organize @item.EventTypes. We are always fullfiled your expections.we always give our best for your events.</p>
                                }
                                @if (item.EventTypes == "Sangeet")
                                {
                                    <ul>
                                        <li><i class="fa fa-calendar" aria-hidden="true"></i>15 June</li>
                                        <li><i class="fa fa-map-marker" aria-hidden="true"></i>BERLIN, GERMANY</li>
                                    </ul>
                                    <p>We Organize @item.EventTypes. We are always fullfiled your expections.we always give our best for your events.</p>
                                }
                                @if (item.EventTypes == "Wedding")
                                {
                                    <ul>
                                        <li><i class="fa fa-calendar" aria-hidden="true"></i>25June</li>
                                        <li><i class="fa fa-map-marker" aria-hidden="true"></i>VENICE, ITALY</li>
                                    </ul>
                                    <p>We Organize @item.EventTypes. We are always fullfiled your expections.we always give our best for your events.</p>
                                }
                                @if (item.EventTypes == "Photography")
                                {
                                    <ul>
                                        <li><i class="fa fa-calendar" aria-hidden="true"></i>01 July</li>
                                        <li><i class="fa fa-map-marker" aria-hidden="true"></i>NEWYORK, USA</li>
                                    </ul>
                                    <p>We Organize @item.EventTypes. We are always fullfiled your expections.we always give our best for your events.</p>
                                }
                                @if (item.EventTypes == "Catering")
                                {
                                    <ul>
                                        <li><i class="fa fa-calendar" aria-hidden="true"></i>30 May</li>
                                        <li><i class="fa fa-map-marker" aria-hidden="true"></i>LONDON, UK</li>
                                    </ul>
                                    <p>We Organize @item.EventTypes. We are always fullfiled your expections.we always give our best for your events.</p>
                                }
                                @if (item.EventTypes == "Baby Shower")
                                {
                                    <ul>
                                        <li><i class="fa fa-calendar" aria-hidden="true"></i>15 June</li>
                                        <li><i class="fa fa-map-marker" aria-hidden="true"></i>BERLIN, GERMANY</li>
                                    </ul>
                                    <p>We Organize @item.EventTypes. We are always fullfiled your expections.we always give our best for your events.</p>
                                }
                            </div>
                        </div>
                        <form method="post" id="insertform" asp-action="Events">
                            <div class="modal video-modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModal">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            Book Event
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        </div>
                                        <div class="modal-body">
                                            <div asp-validation-summary="ModelOnly" style="color:red"></div>
                                            <input asp-for="EventId" type="hidden" id="hiddeneventId" value="" />
                                            <p>
                                                <div class="col-sm-12 col-xs-12 w3ls-lt-form">
                                                    <div class="w3ls-pr">
                                                        <label asp-for="FromDate">FromDate</label>
                                                        <input asp-for="FromDate" type="date" value="" style="font-weight: 700; font-size: 14px; color: black" required>
                                                        <span asp-validation-for="FromDate" class="text-danger"></span>
                                                        <label asp-for="ToDate">ToDate</label>
                                                        <input asp-for="ToDate" type="date" value="" style="font-weight: 700; font-size: 14px; color: black">
                                                        <span asp-validation-for="ToDate" style="color:red"></span>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 col-xs-12 w3ls-lt-form">
                                                    <div class="w3ls-pr">
                                                        <label asp-for="EventTime">EventTime</label>
                                                        <input asp-for="EventTime" type="time" value="" style="font-weight: 700; font-size: 14px; color: black" required>
                                                        <span asp-validation-for="EventTime" class="text-danger"></span>
                                                    </div>
                                                </div>
                                                <div class="col-sm-12 col-xs-12 w3ls-lt-form">
                                                    <div class="w3ls-pr">
                                                        <label asp-for="AreapinCode">AreaoinCode</label>
                                                        <input asp-for="AreapinCode" style="font-weight: 700; font-size: 14px; color: black" type="text" placeholder="NumberOfDays" id="ndays" value="" required>
                                                        <span asp-validation-for="AreapinCode" style="color:red"></span>
                                                        <label asp-for="Address">Address</label>
                                                        <input asp-for="Address" type="text" placeholder="Address" id="address" value="" style="font-weight: 700; font-size: 14px; color: black">
                                                        <span asp-validation-for="Address" style="color:red"></span>
                                                    </div>
                                                </div>

                                                <div class="col-sm-12 col-xs-12 w3ls-lt-form">
                                                    <div class="w3ls-pr">
                                                        <label asp-for="VenuType">VenuType</label>
                                                        <select class="sel" asp-for="VenuType" id="vtype" style="font-weight: 700; font-size: 14px; color: black">
                                                            <option value="" style="font-weight: 700; font-size: 14px; color: black">Venue Type</option>
                                                            <option value="Hall" style="font-weight: 700; font-size: 14px; color: black">Hall</option>
                                                            <option value="OutDoor" style="font-weight: 700; font-size: 14px; color: black">OutDoor</option>
                                                            <option value="Open terrace" style="font-weight: 700; font-size: 14px; color: black">Open terrace</option>
                                                            <option value="Lake Terrace" style="font-weight: 700; font-size: 14px; color: black">Lake Terrace</option>
                                                            <option value="The Village Venue" style="font-weight: 700; font-size: 14px; color: black">The Village Venue</option>
                                                        </select>
                                                        <label asp-for="NumberOfPerson">NumberOfPerson</label>
                                                        <input asp-for="NumberOfPerson" type="text" id="nper" placeholder="NumberOfPerson" value="" style="font-weight: 700; font-size: 14px; color: black" required>
                                                        <span asp-validation-for="NumberOfPerson" style="color:red"></span>
                                                    </div>
                                                </div>
                                                <div class="clearfix"></div>
                                                <div class="text-center">
                                                    <input type="submit" value="Book Now" class="btn btn-block" style="color:deeppink">
                                                </div>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>
