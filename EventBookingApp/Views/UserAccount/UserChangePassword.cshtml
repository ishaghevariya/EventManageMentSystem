@model DataAcessLayer.ViewModel.ChangePasswordModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>UserChangePassword</title>
    <link href="~/plugins/vendor/mdi-font/css/material-design-iconic-font.css" rel="stylesheet" />
    <link href="~/plugins/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="~/plugins/css/main.css" rel="stylesheet" />
</head>
<body>
    <div class="page-wrapper bg-gra-02 p-t-130 p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <div class="card-body">
                    <form asp-action="UserChangePassword" method="post">
                        <h2 class="title">Change Password</h2>
                        <div class="row row-space">
                            <div asp-validation-summary="ModelOnly" style="color:red"></div>
                        </div>
                        <div class="row row-space">
                            <div class="col-12">
                                <div class="input-group">
                                    <label asp-for="CurrentPassword"></label>
                                    <input asp-for="CurrentPassword" class="input--style-4" type="password" required />
                                    <span asp-validation-for="CurrentPassword" style="color:red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-12">
                                <div class="input-group">
                                    <label asp-for="NewPassword"></label>
                                    <input asp-for="NewPassword" class="input--style-4" type="password" required />
                                    <span asp-validation-for="NewPassword" style="color:red"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-12">
                                <div class="input-group">
                                    <label asp-for="ConfirmPassword"></label>
                                    <input asp-for="ConfirmPassword" class="input--style-4" type="password" required />
                                    <span asp-validation-for="ConfirmPassword" style="color:red"></span>
                                </div>
                            </div>
                        </div>

                        <div class="p-t-15">
                            <button class="btn btn--radius-2 btn--blue" type="submit">Submit</button>
                            <a href='@Url.Action("Index","UserAccount")' class="btn btn--radius-2 btn-danger">Close</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <script src="~/plugins/js/global.js"></script>
    <script src="~/plugins/vendor/jquery/jquery.min.js"></script>
</body>
</html>
